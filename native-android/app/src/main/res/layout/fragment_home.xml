<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <View
        android:id="@+id/radial_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/light_behind_edittext"/>

    <TextView
        android:id="@+id/text_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/source_code_pro_medium"
        android:layout_marginBottom="5dp"
        android:paddingStart="20dp"
        android:layout_above="@id/field_cid"
        android:text="@string/enter_cid_ipfs_url_or_ipns"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@android:color/holo_blue_light"/>

    <EditText
        android:id="@+id/field_cid"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textSize="16sp"
        android:fontFamily="@font/source_code_pro_medium"
        android:inputType="textUri"
        android:background="@drawable/rounded_edittext_background"
        android:textColor="@android:color/white"
        android:hint="Enter CID, IPFS URL or IPNS"
        android:textColorHint="@android:color/darker_gray"
        android:autofillHints="ipfsCID" />

    <Button
        android:id="@+id/btn_ipfs_intent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@id/field_cid"
        android:fontFamily="@font/koulen"
        android:letterSpacing="0.2"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext_background_blue"
        android:layout_centerHorizontal="true"
        android:text="OPEN IN BROWSER"/>

</RelativeLayout>
